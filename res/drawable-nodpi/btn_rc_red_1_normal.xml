<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="@dimen/layer_padding_3">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/corner_radius_1" />
                    <solid android:color="#ff8d8a81" />
                </shape>
            </item>
            <item android:top="@dimen/layer_padding_3" android:bottom="@dimen/layer_padding_2">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/corner_radius_1" />
                    <solid android:color="@color/red_2" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/corner_radius_1" />
                    <solid android:color="#ff8d8a81" />
                </shape>
            </item>
            <item android:bottom="@dimen/layer_padding_1">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/corner_radius_1" />
                    <solid android:color="@color/red_2" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>